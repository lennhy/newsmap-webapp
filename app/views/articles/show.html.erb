<h3><%= @article.title%></h3>

<p>By <%= @article.user.name%><p>

<ul>
  <p><b>Sources:</b><p>
  <% @article.sources.each do |source|  %>
    <li> <%= source.name %> </li>
  <% end %>
</ul>

<ul>
  <b>Country:</b> <li><%= @article.country.title %></li><br>
  <b>Category:</b> <li><%= @article.category.title %></li>
</ul>

<li><p><%= @article.content%></p></li>
<p><%=@article.total_validations %> votes


<!-- if the current user is the owner of the article then they can delete it -->
<%  if current_user.id == @article.user.id %>
  <li><p><%= button_to "Delete", destroy_article_url %></li>
  <li><p><%= link_to "Edit", edit_article_url(@article) %></li>
<% end %>

<% if current_user.reader? %>
   <p><%= button_to "Validate", :method =>"create"%>
<% end %>
