<h3>Make a New Article</h3>

<%= form_for @article do |f| %>
  <!-- working Alternative -->
  <%= f.hidden_field :user_id, :value=> "#{current_user.id}" %>
  <%= f.label :country, "Choose a country where the events of this article are taking place "%><br>
  <%= f.collection_select :country_title, Country.all, :id, :title %><br><br>

  <%= f.label :category, "Choose a category" %><br>
  <%= f.collection_select :category_title, Category.all, :id, :title %><br><br>


  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :content %><br>
  <%= f.text_area :content %><br><br>

  <%= f.submit "Submit" %>
<% end %>
